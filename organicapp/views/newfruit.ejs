<%- include('partials/head.ejs') %>
  <div class="row justify-content-center" style="padding-top:20px;border:none;">
    <div class="card text-center" style="border:none;background-color: #ffffff!important;">
      <div class="card-body">
        <h1 class="display-4" data-test-id="add-new-fruit-header">Add new fruit </h1>
        <div class="row" style="background-color: #ffffff;">
          <div class="col-sm-12">
            <div class="card" style="background-color: #e3e2df;">
              <div class="card-body lead" style="text-align: left;">
                <h3 class="card-title">
                  </h5>
                  <p class="card-text" data-test-id="add-new-fruit-body-text">This form allows you to add new fruit to
                    RethinkDB database</p>
              </div>
            </div>
          </div>
        </div>
        <h1 class="display-4">Form</h1>
        <form action="/food/products/fruit/" method="POST" id="newFruitForm">
          <ul class="list-group list-group-flush">
            <li class="list-group-item" style="padding: 0rem 0rem !important;">
              <table style="width:100%;margin-bottom: 0px !important;">
                <tr>
                  <td data-test-id="new-fruit-form-label-color" style="width:50%" class="lead">Color:</td>
                  <td style="width:50%" class="lead"><input class="form-control form-control-lg"
                      data-test-id="new-fruit-form-input-color" type="text" placeholder="" name="color"> </td>
                </tr>
              </table>
            </li>
            <li class="list-group-item" style="padding: 0rem 0rem !important;">
              <table style="width:100%;margin-bottom: 0px !important;">
                <tr>
                  <td data-test-id="new-fruit-form-label-property" style="width:50%" class="lead">Property:</td>
                  <td style="width:50%" class="lead"><input class="form-control form-control-lg"
                      data-test-id="new-fruit-form-input-property" type="text" placeholder="" name="property"></td>
                </tr>
              </table>
            </li>
            <li class="list-group-item" style="padding: 0rem 0rem !important;">
              <table style="width:100%;margin-bottom: 0px !important;">
                <tr>
                  <td data-test-id="new-fruit-form-label-Id" style="width:50%" class="lead">Id:</td>
                  <td style="width:50%" class="lead"><input class="form-control form-control-lg" type="text"
                      placeholder="" data-test-id="new-fruit-form-input-id" name="id"></td>
                </tr>
              </table>
            </li>
            <li class="list-group-item" style="padding: 0rem 0rem !important;">
              <table style="width:100%;margin-bottom: 0px !important;">
                <tr>
                  <td data-test-id="new-fruit-form-label-Name" style="width:50%" class="lead">Name:</td>
                  <td style="width:50%" class="lead"><input class="form-control form-control-lg" type="text"
                      placeholder="" data-test-id="new-fruit-form-input-name" name="name"></td>
                </tr>
              </table>
            </li>
          </ul>
          <button type="submit" class="btn btn-danger">Submit</button>
        </form>
        <hr style="height:2px; width: 20px; background-color: black; width: 100%;">
      </div>
      <div class="card-footer text-muted">
        Add new fruit form.
      </div>
    </div>
  </div>
  <%- include('partials/foot.ejs') %>